@{
    ViewData["Title"] = "Search Page";
}

<h1 style="font-size: 2rem; font-family: 'Alice', serif; margin-bottom: 3px;">Search Smth</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="input-group mb-3">
                <input type="text" id="searchInput" class="form-control" placeholder="Search The smth..."
                    autocomplete="off" autofocus="autofocus" required>
                <button id="searchButton" class="btn btn-primary">
                    <span id="searchText">Search</span>
                    <div id="loadingSpinner" class="spinner-border spinner-border-sm btn-search-spinner" role="status">
                    </div>
                </button>
            </div>
            <div class="input-group mb-1">
                <select class="form-select ml-2 m-1">
                    <option value="title">Sort by Title</option>
                    <option value="date">Sort by Date</option>
                </select>
                <div class="btn-group ml-2 m-1" role="group" aria-label="View toggle">
                    <button type="button" class="btn btn-outline-secondary" id="rowViewButton">Row</button>
                    <button type="button" class="btn btn-outline-secondary active" id="columnViewButton">Column</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3 mt-md-5">
    <div class="container">
        <div class="row restorantsContainers column" id="restorantsContainers">
            <!-- Restourant Item -->
            <div class="col-md-3 restaurantItem" data-title="Restourant Title 1" data-date="2023-01-02">
                <div class="card mb-4 restorantCard">
                    <img src="/images/animeCard.jpg" class="card-img-top" alt="Restourant Title 1">
                    <div class="card-body">
                        <h5 class="card-title m-2">Restourant Title 1</h5>
                        <p class="card-text m-2">Short description of the restourant...</p>
                        <!-- Rating -->
                        <div class="rating m-2">
                            <span class="text-warning">
                                <i class="fas fa-star star" data-rating="1"></i>
                                <i class="fas fa-star star" data-rating="2"></i>
                                <i class="far fa-star star" data-rating="3"></i>
                                <i class="far fa-star star" data-rating="4"></i>
                                <i class="far fa-star star" data-rating="5"></i>
                            </span>
                            <span class="badge bg-secondary ms-2">2</span>
                        </div>
                        <!-- Tags -->
                        <div class="mt-3 m-1">
                            <span class="badge bg-primary">Family-friendly</span>
                            <span class="badge bg-secondary">Outdoor Seating</span>
                            <span class="badge bg-success">Vegetarian Options</span>
                            <span class="badge bg-danger">Pet-friendly</span>
                        </div>
                        <a href="#" class="btn btn-primary m-1">View Details</a>
                    </div>
                </div>
            </div>
            <!-- Restourant Item -->
            <div class="col-md-3 restaurantItem" data-title="Restourant Title 2" data-date="2023-01-02">
                <div class="card mb-4 restorantCard">
                    <img src="/images/animeCard.jpg" class="card-img-top" alt="Restourant Title 2">
                    <div class="card-body">
                        <h5 class="card-title m-2">Restourant Title 2</h5>
                        <p class="card-text m-2">Short description of the restourant...</p>
                        <!-- Rating -->
                        <div class="rating m-2">
                            <span class="text-warning">
                                <i class="fas fa-star star" data-rating="1"></i>
                                <i class="fas fa-star star" data-rating="2"></i>
                                <i class="far fa-star star" data-rating="3"></i>
                                <i class="far fa-star star" data-rating="4"></i>
                                <i class="far fa-star star" data-rating="5"></i>
                            </span>
                            <span class="badge bg-secondary ms-2">2</span>
                        </div>
                        <!-- Tags -->
                        <div class="mt-3 m-1">
                            <span class="badge bg-primary">Family-friendly</span>
                            <span class="badge bg-secondary">Outdoor Seating</span>
                            <span class="badge bg-success">Vegetarian Options</span>
                            <span class="badge bg-danger">Pet-friendly</span>
                        </div>
                        <a href="#" class="btn btn-primary m-1">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <script>
        $(document).ready(function () {

            $('#columnViewButton').on('click', function () {
                $('.restorantsContainers').addClass('row').removeClass('column');
                $('.restaurantItem').addClass('col-md-3').removeClass('row-cols-5');
                $('.restorantCard').removeClass('flex').removeClass('flex-row').removeClass('row-cols-1').removeClass('col-12');
                $('.card-img-top').css('max-width', '');
                $(this).addClass('active');
                $('#rowViewButton').removeClass('active');
            });

            $('#rowViewButton').on('click', function () {
                $('.restorantsContainers').addClass('column').removeClass('row');
                $('.restaurantItem').addClass('row-cols-5').removeClass('col-md-3');
                $('.restorantCard').addClass('flex').addClass('flex-row').addClass('row-cols-1').addClass('col-12');
                $('.card-img-top').css('max-width', '150px');
                $(this).addClass('active');
                $('#columnViewButton').removeClass('active');
            });

        });
    </script>
}
